{
  "manifest_version": 3,
  "name": "Sharepoint Video Downloader",
  "description": "Base Level Extension",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "storage",
    "clipboardWrite",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*.sharepoint.com/",
    "https://*.sharepoint-df.com/",
    "https://*.svc.ms/"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "cool.png"
  },
  "background": {
    "service_worker": "sniff.js"
  }
}